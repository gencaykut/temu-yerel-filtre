{
  "manifest_version": 3,
  "name": "Yerel Filtre – for Temu",
  "version": "1.0.0",
  "description": "Temu'da \"Yerel\" rozetli ürünleri gizler.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.temu.com/*",
    "https://*.temu.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.temu.com/*",
        "https://*.temu.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Yerel Filtre – for Temu",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "temuhidden16.png",
    "32": "temuhidden32.png",
    "48": "temuhidden48.png",
    "128": "temuhidden128.png"
  }
}
